/* ========================================
   JARVIS AI Assistant Styling
   Iron Man Theme Exclusive
   ======================================== */

/* JARVIS Button - Only visible in Iron Man theme */
.jarvis-btn {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 9998;
    display: none;
    /* Hidden by default, shown only in Iron Man theme */
    padding: 12px 20px;
    background: rgba(255, 215, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 8px;
    color: #ffd700;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.2);
}

.jarvis-btn:hover {
    background: rgba(255, 215, 0, 0.2);
    border-color: rgba(255, 215, 0, 0.5);
    box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
    transform: translateY(-2px);
}

.jarvis-btn i {
    margin-left: 8px;
}

/* JARVIS Chat Window */
.jarvis-window {
    position: fixed;
    bottom: 90px;
    right: 30px;
    width: 380px;
    height: 550px;
    z-index: 9999;
    display: none;
    /* Hidden by default */
    flex-direction: column;
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(255, 215, 0, 0.3);
    overflow: hidden;
    animation: jarvisSlideIn 0.4s ease-out;
}

.jarvis-window.active {
    display: flex;
}

.jarvis-window.minimized {
    height: 60px;
}

@keyframes jarvisSlideIn {
    from {
        opacity: 0;
        transform: translateX(50px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* JARVIS Header */
.jarvis-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background: rgba(255, 215, 0, 0.1);
    border-bottom: 1px solid rgba(255, 215, 0, 0.2);
}

.jarvis-title {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #ffd700;
    font-weight: 700;
    font-size: 16px;
    letter-spacing: 2px;
}

.jarvis-title i {
    font-size: 18px;
    color: #ff4444;
}

.jarvis-controls {
    display: flex;
    gap: 8px;
}

.jarvis-control-btn {
    background: transparent;
    border: none;
    color: #ffd700;
    cursor: pointer;
    padding: 5px 8px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

