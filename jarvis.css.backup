/* JARVIS Chat Window */
.jarvis-window {
    position: fixed;
    bottom: 90px;
    right: 24px;
    width: 420px;
    height: 650px;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.96), rgba(40, 20, 0, 0.96));
    border: 2px solid rgba(212, 175, 55, 0.4);
    border-radius: 20px;
    box-shadow:
        0 24px 80px rgba(212, 175, 55, 0.25),
        0 12px 40px rgba(0, 0, 0, 0.6),
        inset 0 1px 0 rgba(212, 175, 55, 0.1);
    backdrop-filter: blur(16px);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px) scale(0.92);
    pointer-events: none;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 9999;
}

.jarvis-window.active {
    display: flex;
}

.jarvis-window.minimized {
    height: 60px;
}

