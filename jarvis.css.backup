    background: transparent;
    border: none;
    color: #ffd700;
    cursor: pointer;
    padding: 5px 8px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

.jarvis-control-btn:hover {
    background: rgba(255, 215, 0, 0.2);
}

/* JARVIS Chat Container */
.jarvis-chat-container {
    flex: 1;
    overflow-y: auto;
    padding: 24px 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    scroll-behavior: smooth;
}

.jarvis-chat-container::-webkit-scrollbar {
    width: 6px;
}

.jarvis-chat-container::-webkit-scrollbar-track {
    background: rgba(255, 215, 0, 0.05);
}

.jarvis-chat-container::-webkit-scrollbar-thumb {
    background: rgba(255, 215, 0, 0.3);
    border-radius: 3px;
}

/* Chat Messages */
.jarvis-message {
    display: flex;
    flex-direction: column;
    gap: 5px;
    max-width: 85%;
    animation: messageSlideIn 0.3s ease-out;
}

@keyframes messageSlideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.jarvis-message.user {
    align-self: flex-end;
}

.jarvis-message.jarvis {
    align-self: flex-start;
}

.message-bubble {
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 14px;
    line-height: 1.5;
}

.jarvis-message.user .message-bubble {
    background: rgba(255, 68, 68, 0.2);
    border: 1px solid rgba(255, 68, 68, 0.3);
    color: #ff4444;
}

.jarvis-message.jarvis .message-bubble {
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.2);
    color: #ffd700;
}

.message-time {
    font-size: 11px;
    color: rgba(255, 215, 0, 0.5);
    padding: 0 5px;
}

/* JARVIS Input Area */
.jarvis-input-area {
    display: flex;
    gap: 10px;
    padding: 15px 20px;
    background: rgba(255, 215, 0, 0.05);
    border-top: 1px solid rgba(255, 215, 0, 0.2);
}

.jarvis-voice-btn {
    background: rgba(255, 68, 68, 0.2);
    border: 1px solid rgba(255, 68, 68, 0.3);
    color: #ff4444;
    padding: 10px 14px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.jarvis-voice-btn:hover,
.jarvis-voice-btn.listening {
    background: rgba(255, 68, 68, 0.4);
    box-shadow: 0 0 15px rgba(255, 68, 68, 0.5);
}

.jarvis-voice-btn.listening {
    animation: pulse 1.5s infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }
}

.jarvis-text-input {
    flex: 1;
    background: rgba(255, 215, 0, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 8px;
    padding: 10px 15px;
    color: #ffd700;
    font-size: 14px;
    outline: none;
}

.jarvis-text-input::placeholder {
    color: rgba(255, 215, 0, 0.4);
}

.jarvis-text-input:focus {
    border-color: rgba(255, 215, 0, 0.4);
    background: rgba(255, 215, 0, 0.08);
}

.jarvis-send-btn {
    background: rgba(255, 215, 0, 0.2);
    border: 1px solid rgba(255, 215, 0, 0.3);
    color: #ffd700;
    padding: 10px 14px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.jarvis-send-btn:hover {
    background: rgba(255, 215, 0, 0.3);
    box-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
}

/* JARVIS Status Bar */
.jarvis-status {
    padding: 8px 20px;
    background: rgba(255, 215, 0, 0.05);
    border-top: 1px solid rgba(255, 215, 0, 0.1);
    text-align: center;
}

.jarvis-status-text {
    font-size: 12px;
    color: rgba(255, 215, 0, 0.6);
}

/* Typing Indicator */
.typing-indicator {
    display: flex;
    gap: 4px;
    padding: 12px 16px;
}

.typing-dot {
    width: 8px;
    height: 8px;
    background: rgba(255, 215, 0, 0.6);
    border-radius: 50%;
    animation: typingBounce 1.4s infinite;
}

.typing-dot:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typingBounce {

    0%,
    60%,
    100% {
        transform: translateY(0);
    }

    30% {
        transform: translateY(-10px);
    }
}

/* Responsive adjustments */
@media (max-width: 768px) {

    .jarvis-btn,
    .jarvis-window {
        display: none !important;
        /* Hide on mobile */
    }
}

/* ===== QUICK ACTION BUTTONS ===== */
.jarvis-quick-actions {
    display: flex;
    gap: 8px;
    padding: 12px 20px;
    background: rgba(0, 0, 0, 0.2);
    border-top: 1px solid rgba(212, 175, 55, 0.2);
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
}

.quick-action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 10px 12px;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 8px;
    color: #d4af37;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.quick-action-btn:hover {
    background: rgba(212, 175, 55, 0.2);
    border-color: rgba(212, 175, 55, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
}

/* ===== SUGGESTION CHIPS ===== */
.jarvis-suggestions {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0 20px 12px;
    max-height: 100px;
    overflow-y: auto;
}

.jarvis-suggestions:empty {
    display: none;
}

.suggestion-chip {
    padding: 8px 14px;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 20px;
    color: #d4af37;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.suggestion-chip:hover {
    background: rgba(212, 175, 55, 0.2);
    border-color: #d4af37;
    transform: scale(1.05);
}

/* ===== MULTI-THEME SUPPORT ===== */
.quantum-mode .jarvis-btn {
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(138, 43, 226, 0.2));
    color: #00ffff;
}

.quantum-mode .jarvis-window {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.95), rgba(20, 0, 40, 0.95));
}

.quantum-mode .jarvis-message.user .message-bubble {
    background: rgba(138, 43, 226, 0.3);
    color: #da70d6;
}

.quantum-mode .jarvis-message.jarvis .message-bubble {
    background: rgba(0, 255, 255, 0.2);
    color: #00ffff;
}

.quantum-mode .quick-action-btn,
.quantum-mode .suggestion-chip {
    background: rgba(0, 255, 255, 0.1);
    color: #00ffff;
}

.photon-mode .jarvis-btn {
    background: linear-gradient(135deg, rgba(0, 150, 255, 0.2), rgba(255, 255, 255, 0.2));
    color: #0096ff;
}

.photon-mode .jarvis-window {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(230, 240, 255, 0.95));
}

.photon-mode .jarvis-message.user .message-bubble {
    background: rgba(100, 180, 255, 0.3);
    color: #0050a0;
}

.photon-mode .jarvis-message.jarvis .message-bubble {
    background: rgba(0, 150, 255, 0.2);
    color: #0096ff;
}

.photon-mode .quick-action-btn,
.photon-mode .suggestion-chip {
    background: rgba(0, 150, 255, 0.1);
    color: #0096ff;
}

.terminal-mode .jarvis-btn {
    background: linear-gradient(135deg, rgba(0, 255, 0, 0.2), rgba(0, 100, 0, 0.2));
    color: #00ff00;
}

.terminal-mode .jarvis-window {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.98), rgba(0, 20, 0, 0.98));
}

.terminal-mode .jarvis-message.user .message-bubble {
    background: rgba(0, 200, 0, 0.3);
    color: #00ff00;
}

.terminal-mode .jarvis-message.jarvis .message-bubble {
    background: rgba(0, 255, 0, 0.2);
    color: #00ff00;
}

.terminal-mode .quick-action-btn,
.terminal-mode .suggestion-chip {
    background: rgba(0, 255, 0, 0.1);
    color: #00ff00;
}